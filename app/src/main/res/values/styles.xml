<resources>
    <style name="NavigationStyle" parent="Widget.Design.NavigationView">
        <item name="android:colorBackground">#D6D6D6</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottom_sheet</item>
    </style>

    <style name="searchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="submitBackground">@android:color/transparent</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="closeIcon">@drawable/ic_close_black_24dp</item>
        <item name="searchIcon">@drawable/ic_search_black_24dp</item>
    </style>

    <style name="ImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

</resources>
